<% include ../partials/social-top %>

<div class="container">
  <div class="my-solid-background">
    <h1>Edit Quote <%=quote._id%></h1>
    <form action="/quotes/<%=quote._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" value="<%=quote.quote%>" name="quote[quote]">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" value="<%=quote.speaker%>" name="quote[speaker]">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>

</div>

