<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/social-top %>

<div class="container">
  <div class="my-solid-background">
    <h1>Edit Article</h1>
    <form action="/articles/<%=article._id%>?_method=PUT" method="POST">

      <div class="form-group">
        <input class="form-control" type="text" value="<%=article.title%>" name="article[title]">
      </div>

      <div class="form-group">
        <input class="form-control" type="text" value="<%=article.image_url%>" name="article[image_url]">
      </div>

      <div class="form-group">
        <label for="EraSelect">Era</label>
        <select class="form-control" name="article[era]" id="EraSelect">
          <% menu.eras.forEach(function(era) { %>
            <option value="<%=era._id%>"><%=era.archetype%></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="SeriesSelect">Series</label>
        <select class="form-control" name="article[series]" id="SeriesSelect">
          <% menu.series.forEach(function(seri) { %>
            <option value="<%=seri._id%>"><%=seri.series%></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="AuthorSelect">Author</label>
        <select class="form-control" name="article[author]" id="AuthorSelect">
          <% menu.authors.forEach(function(author) { %>
            <option value="<%=author._id%>"><%=author.name%></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <input class="form-control" type="text" value="<%=article.pub_date%>" disabled="true">
      </div>

      <div class="form-group">
        <label for="DateSelect">Adjust Date?</label>
        <select class="form-control" name="adjust_date" id="DateSelect">
          <option value="0">Keep Original Date</option>
          <option value="1">Move Date to Now</option>
        </select>
      </div>

      <div class="form-group">
        <label for="ArticleBody">Article Body</label>
        <textarea class="form-control" name="article[article_body]" id="ArticleBody" rows="20"><%=article.article_body%></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>

</div>

<% include ../partials/footer %>
