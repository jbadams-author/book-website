<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/social-top %>

<div class="container">
  <div class="my-solid-background">
    <h1>New Article</h1>
    <form action="/articles" method="post">

      <div class="form-group">
        <input class="form-control" type="text" placeholder="Title" name="article[title]">
      </div>

      <div class="form-group">
        <input class="form-control" type="text" placeholder="Image URL" name="article[image_url]">
      </div>

      <div class="form-group">
        <label for="EraSelect">Era</label>
        <select class="form-control" name="article[era]" id="EraSelect">
          <% eras.forEach(function(era) { %>
            <option value="<%=era._id%>"><%=era.archetype%></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="SeriesSelect">Series</label>
        <select class="form-control" name="article[series]" id="SeriesSelect">
          <% series.forEach(function(seri) { %>
            <option value="<%=seri._id%>"><%=seri.series%></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="AuthorSelect">Author</label>
        <select class="form-control" name="article[author]" id="AuthorSelect">
          <% authors.forEach(function(author) { %>
            <option value="<%=author._id%>"><%=author.name%></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="ArticleBody">Article Body</label>
        <textarea class="form-control" name="article[article_body]" id="ArticleBody" rows="20"></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>

</div>

<% include ../partials/footer %>
