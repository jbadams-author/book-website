<div class="container">
  <div class="my-solid-background">
    <h1>New News Item</h1>
    <form action="/news" method="post">
      <div class="form-group">
        <input class="form-control" type="text" placeholder="Title" name="newsItem[title]">
      </div>
      <div class="form-group">
        <label for="ArticleBody">Article Body</label>
        <textarea class="form-control" name="newsItem[article_body]" id="ArticleBody" rows="20"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>

</div>

