<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/social-top %>

<div class="container">
  <div class="my-solid-background">
    <h1>Edit News Item</h1>
    <form action="/news/<%=newsItem._id%>?_method=PUT" method="POST">

      <div class="form-group">
        <input class="form-control" type="text" value="<%=newsItem.title%>" name="newsItem[title]">
      </div>

      <div class="form-group">
        <input class="form-control" type="text" value="<%=newsItem.pub_date%>" disabled="true">
      </div>

      <div class="form-group">
        <label for="DateSelect">Adjust Date?</label>
        <select class="form-control" name="adjust_date" id="DateSelect">
          <option value="0">Keep Original Date</option>
          <option value="1">Move Date to Now</option>
        </select>
      </div>

      <div class="form-group">
        <label for="ArticleBody">Article Body</label>
        <textarea class="form-control" name="newsItem[article_body]" id="ArticleBody" rows="20"><%=newsItem.article_body%></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>

</div>

<% include ../partials/footer %>
