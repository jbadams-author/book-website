<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/social-top %>

<div class="container">
  <div class="my-solid-background">
    <h1>New Calendar Event</h1>
    <form action="/calendar" method="post">
      <div class="form-group">
        <input class="form-control" type="text" placeholder="Title" name="calendarEvent[title]">
      </div>

      <div class="form-group">
        <input class="form-control" type="text" placeholder="Location" name="calendarEvent[location]">
      </div>

      <div class="form-group">
        <input class="form-control" type="datetime-local" name="calendarEvent[event_date]">
      </div>

      <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" name="calendarEvent[description]" id="Description" rows="20"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
  </div>
</div>

</div>

